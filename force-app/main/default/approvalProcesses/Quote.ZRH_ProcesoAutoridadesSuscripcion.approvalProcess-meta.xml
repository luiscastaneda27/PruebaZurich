<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>ZRH_JefeSuscripcion</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ZRH_SubgerenteSuscripcion</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ZRH_Suscriptor</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Solicitud en proceso aprobación</label>
        <name>ZRH_SolicitudProcesoAprobacion</name>
    </approvalStep>
    <emailTemplate>unfiled$public/ZRH_PlantillaAprobaciones</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>Large Group Quote</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ZRH_AprobacionPendienteConfirmado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ZRH_EstadoAprobado</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ZRH_AprobacionPendienteRechazado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ZRH_EstadoDeclinado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ZRH_EstadoPendiente</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Proceso autoridades de suscripción</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

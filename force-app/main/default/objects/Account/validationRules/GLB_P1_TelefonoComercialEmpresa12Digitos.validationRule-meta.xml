<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>GLB_P1_TelefonoComercialEmpresa12Digitos</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(GLBP1_Telefono_comercial__c)), 

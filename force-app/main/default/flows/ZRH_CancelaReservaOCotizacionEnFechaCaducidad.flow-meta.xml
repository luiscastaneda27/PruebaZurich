<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>Flujo de ejecución diara que pasa a estado Perdida aquellas reservas o cotizaciones que cumplan la fecha de caducidad.</description>
    <environments>Default</environments>
    <formulas>
        <name>Today</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
    <interviewLabel>ZRH_ {!$Flow.CurrentDateTime}</interviewLabel>
    <label>ZRH_CancelaReservaOCotizacionEnFechaCaducidad</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Actualizar reserva/cotizacion a estado perdida en caso de que se cumpla la fecha de caducidad</description>
        <name>Actualizar_Reserva_Cotizacion</name>
        <label>Actualizar Reserva/Cotizacion</label>
        <locationX>572</locationX>
        <locationY>348</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>ZRH_FechaCaducidad__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Today</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Status</field>
            <value>
                <stringValue>E-10</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>ZRH_SubEstado__c</field>
            <value>
                <stringValue>SE-13</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>446</locationX>
        <locationY>48</locationY>
        <connector>
            <targetReference>Actualizar_Reserva_Cotizacion</targetReference>
        </connector>
        <filterLogic>((1 AND 2) OR (3 AND 4) AND 5)</filterLogic>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>E-01</stringValue>
            </value>
        </filters>
        <filters>
            <field>ZRH_Origen__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Reserva</stringValue>
            </value>
        </filters>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>E-02</stringValue>
            </value>
        </filters>
        <filters>
            <field>ZRH_Origen__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Cotización</stringValue>
            </value>
        </filters>
        <filters>
            <field>vlocity_ins__RecordTypeName__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>LargeGroupQuote</stringValue>
            </value>
        </filters>
        <object>Quote</object>
        <schedule>
            <frequency>Daily</frequency>
            <startDate>2023-07-02</startDate>
            <startTime>00:00:00.000Z</startTime>
        </schedule>
        <triggerType>Scheduled</triggerType>
    </start>
    <status>Active</status>
</Flow>
